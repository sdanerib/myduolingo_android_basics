<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->

        <item name="colorPrimary">@color/blueberryStrong</item>
        <item name="colorPrimaryDark">@color/opacityBlueberryStrong</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/activity_slide</item>
        <item name="android:windowEnterTransition">@transition/activity_fade</item>

    </style>


    <style name="IWantToLearnTheme" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="UserSessionDashboardTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
